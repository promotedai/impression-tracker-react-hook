{
  "name": "@promotedai/impression-tracker-react-hook",
  "version": "1.0.0",
  "description": "Project template for a React library",
  "main": "impression-tracker-react-hook.umd.js",
  "module": "impression-tracker-react-hook.esm.js",
  "typings": "index.d.ts",
  "scripts": {
    "prettier": "prettier '**/*.{js,ts}' --ignore-path ./.prettierignore",
    "types": "tsc --noEmit",
    "build": "npm run build:clean && npm run build:lib",
    "build:clean": "rimraf dist",
    "build:lib": "rollup -c",
    "lint": "eslint './{src,app}/**/*.{ts,tsx}'",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "size": "size-limit",
    "finish": "jest --coverage && npm run lint && npm run types"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promotedai/impression-tracker-react-hook"
  },
  "publishConfig": {
    "access": "public",
    "registry":"https://registry.npmjs.org"
  },
  "keywords": [
    "react",
    "library",
    "impression",
    "tracking",
    "promoted"
  ],
  "author": {
    "name": "Dan Hill",
    "email": "dhill@promoted.ai",
    "url": "https://promoted.ai"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/promotedia/impression-tracker-react-hook/issues"
  },
  "homepage": "https://github.com/promotedai/impression-tracker-react-hook#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.9",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@size-limit/preset-small-lib": "^4.5.0",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jsdoc": "^30.0.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.3.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.2",
    "prettier": "^2.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rollup": "^2.16.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "semantic-release": "^17.3.1",
    "size-limit": "^4.5.0",
    "ts-jest": "^26.1.0",
    "typescript": "^4.1.3"
  },
  "config": {
    "lib": {
      "peerDependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "typescript": "^4.1.3"
      }
    }
  },
  "dependencies": {
    "intersection-observer": "^0.12.0",
    "react-intersection-observer": "^8.31.0",
    "uuid": "^8.3.2"
  }
}
