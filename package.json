{
  "name": "impression-tracker-react-hook",
  "version": "7.2.0",
  "description": "Tracks impressions in React using a Hook",
  "scripts": {
    "prettier": "prettier '**/*.{js,ts}' --ignore-path ./.prettierignore",
    "types": "tsc --noEmit",
    "build": "npm run build:clean && npm run build:lib",
    "build:clean": "rimraf dist",
    "build:lib": "rollup -c",
    "build:watch": "rollup -c -w",
    "updateLink": "npm run build:clean && npm run build && cd dist && npm link",
    "lint": "eslint './{src,app}/**/*.{ts,tsx}'",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "size": "size-limit",
    "finish": "jest --coverage && npm run lint && npm run types",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/promotedai/impression-tracker-react-hook"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "library",
    "impression",
    "tracking",
    "promoted"
  ],
  "author": {
    "name": "Dan Hill",
    "email": "dhill@promoted.ai",
    "url": "https://promoted.ai"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/promotedia/impression-tracker-react-hook/issues"
  },
  "homepage": "https://github.com/promotedai/impression-tracker-react-hook#readme",
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.0",
    "@types/react": "^17.0.02",
    "@types/react-dom": "^18.0.5",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "intersection-observer": "^0.12.0",
    "jest": "^26.0.1",
    "lint-staged": "^12.5.0",
    "prettier": "^2.6.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.75.4",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "semantic-release": "^19.0.2",
    "size-limit": "^7.0.8",
    "ts-jest": "^26.0.1",
    "typescript": "^4.7.2",
    "utility-types": "^3.10.0",
    "uuid": "^8.3.2"
  },
  "dependencies": {
    "intersection-observer": "^0.12.0",
    "react-intersection-observer": "^9.2.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || 17 || 18",
    "react-dom": "^16.8.0 || 17 || 18",
    "uuid": "^8.0.0"
  }
}